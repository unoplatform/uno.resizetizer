	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:local="using:Uno.Resizetizer.Sample"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	  mc:Ignorable="d">

	<ScrollViewer>
		<StackPanel>
			<TextBlock Margin="20"
					   FontSize="30"
					   Text="Hello, world!" />
			<!--  These Should work everywere  -->
			<Image Width="300"
				   Height="300"
				   Source="ms-appx:///MyAssets/Nested/dotnet_bot.png" />
			<Image Width="300"
				   Height="300"
				   Source="ms-appx:///Assets/Images/dotnet_bot2.png" />

			<!--  This works on Android  -->

			<Image Width="300"
				   Height="300"
				   Source="Assets_Images_dotnet_bot2.png" />

			<!--  This works on iOS  -->
			<Image Width="300"
				   Height="300"
				   Source="Assets\\Images\\dotnet_bot2" />
			<!--<Image Source="ms-appx:///Assets/Images/TestImg-512.png" />-->
		</StackPanel>
	</ScrollViewer>
</Page>
